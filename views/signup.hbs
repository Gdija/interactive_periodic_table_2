<body>
    <nav class="nav_bar">
        <h1 class="logo"><a href="/">ElemLearn</a></h1>
        <ul>
            <li><a href="/periodic table">Periodic Table</a></li>
            <li><a href="/quiz">Quiz</a></li>
            <li><a href="/login">Login</a></li>
            <li class="btn"><a href="/signup">SignUp</a></li>
        </ul>
    </nav>

    <div class="sec-container">
        <div class="backgroundAnim">
                    <span style="--i:11;">Ba2+</span>
                    <span style="--i:12;">Be2+</span>
                    <span style="--i:23;">Ca2+</span>
                    <span style="--i:20;">Pb4+</span>
                    <span style="--i:11;">Al3+</span>
                    <span style="--i:12;">Cr3+</span>
                    <span style="--i:23;">Fe3+</span>
                    <span style="--i:24;">Li+</span>
                    <span style="--i:15;">Hg2+</span>
                    <span style="--i:19;">Sn2+</span>
                    <span style="--i:21;">Cu2+</span>
                    <span style="--i:13;">Zn2+</span>
                    <span style="--i:28;">Sr2+</span>
                    <span style="--i:10;">NH4+</span>
                    <span style="--i:13;">Ag+</span>
                    <span style="--i:14;">Na+</span>
                    <span style="--i:18;">H+</span>
                    <span style="--i:25;">Pb2+</span>
                    <span style="--i:14;">Fe2+</span>
                    <span style="--i:18;">Mg2+</span>
                    <span style="--i:30;">H3O+</span>
                    <span style="--i:15;">Rb2+</span>
                    <span style="--i:29;">Ra2+</span>
                    <span style="--i:35;">Fr+</span>
        </div>
        <div class="container">
            <div class="card">
                <div class="card-header">
                Signup Form
                </div>
                <div class="card-body">
                    <form action="/auth/register" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <div class="form-group">
                            <label for="passwordConfirm">Confirm Password</label>
                            <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
                        </div>
                        <button type="submit" class="btn btn-primary">Sign up</button>
                    </form>
                </div>
                {{#if message }}
                <h4 class="alert alert-danger mt-4">{{message}}</h4>
                {{/if}}
            </div>
        </div>
    </div>
